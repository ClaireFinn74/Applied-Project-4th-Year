<Page
    x:Class="AppliedProject4thYear.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AppliedProject4thYear"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid Margin="0,-3,0,3">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="49*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF761D1D" Offset="0"/>
                <GradientStop Color="#FF0E0000" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="12*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="368*"/>
            <RowDefinition Height="135*"/>
        </Grid.RowDefinitions>


        <StackPanel Orientation="Vertical" Grid.RowSpan="2" Margin="-10,4,10,-188" Grid.ColumnSpan="3" Grid.Row="2">
            <StackPanel.Background>
                <ImageBrush Stretch="Uniform" ImageSource="Images/12-vector-game-backgrounds-8320_imgs_8320_7.png"/>
            </StackPanel.Background>
            <StackPanel Orientation="Horizontal"/>
            <StackPanel Orientation="Vertical" Margin="10,10,10,10">
                <StackPanel Orientation="Horizontal" Margin="182,0,-182,0">
                    <Button x:ConnectionId='9' x:Name="btnAttention" Content="Attention" HorizontalAlignment="Left" Margin="0,150,0,0" VerticalAlignment="Top"                            Height="136" Width="168" FontSize="25">
                        <Button.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FF7E3B57" Offset="0"/>
                                <GradientStop Color="#FFFF2A81" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>
                    <Button x:ConnectionId='10' x:Name="btnProblemSolving" Content="Problem Solving" HorizontalAlignment="Left" Margin="0,150,0,0" VerticalAlignment="Top" Height="136" Width="168"                                 FontSize="20">
                        <Button.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FF2A3D46" Offset="0"/>
                                <GradientStop Color="#FF36BBF9" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="184,0,-184,10" Height="176">
                    <Button x:ConnectionId='7' x:Name="btnSpeed" Content="Speed" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Center" Height="136" Width="168"                        FontSize="25">
                        <Button.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FF888B3F" Offset="0"/>
                                <GradientStop Color="#FFF3FF00" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>
                    <Button x:ConnectionId='8' x:Name="btnMemory" Content="Memory" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Center" Height="136" Width="168"                         FontSize="25">
                        <Button.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FF4A235D" Offset="0"/>
                                <GradientStop Color="#FFA704F3" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>
                </StackPanel>
            </StackPanel>
            <HyperlinkButton Content="Click to see all Scores" Margin="20,-20,0,20" VerticalAlignment="Top" Height="80" Width="167" Foreground="Black" FontWeight="Bold" NavigateUri="brainworksapp.cloudapp.net">
                <HyperlinkButton.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF815C25" Offset="0.008"/>
                        <GradientStop Color="#FFFF7400" Offset="1"/>
                    </LinearGradientBrush>
                </HyperlinkButton.Background>
            </HyperlinkButton>
            <Button x:ConnectionId='6' x:Name="btnListUsers" Margin="25,-5,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="80" Width="171" Content="Registered?" FontSize="30"                            RenderTransformOrigin="0.493,1.5">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFE3FF84" Offset="0.008"/>
                        <GradientStop Color="#FFE3F1B3" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
        </StackPanel>
        <StackPanel Margin="15,-162,1402,55" Grid.Column="2">
            <Image x:ConnectionId='5' x:Name="image" Height="100"/>
        </StackPanel>
        <Button x:ConnectionId='1' x:Name="btnHighScores" Content="Scores" HorizontalAlignment="Left" VerticalAlignment="Top" Height="80" Width="167" FontSize="30"                             Margin="9,370,0,0" Grid.ColumnSpan="2" Grid.Row="2">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF815C25" Offset="0.008"/>
                    <GradientStop Color="#FFFF7400" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:ConnectionId='2' x:Name="btnFbLogin" FontSize="45" Foreground="White" Content="f" HorizontalAlignment="Left" Margin="9,271,0,0" Width="167"                          RenderTransformOrigin="2.379,0.258" Height="78" VerticalAlignment="Top" Grid.ColumnSpan="2" Grid.Row="2">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF394857" Offset="0"/>
                    <GradientStop Color="#FF3890E8" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:ConnectionId='3' x:Name="btnCredits" Content="Credits" HorizontalAlignment="Left" VerticalAlignment="Top" Height="80" Width="170" FontSize="30"                          Margin="6,153,0,0" Grid.ColumnSpan="2" Grid.Row="2">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFE3FF84" Offset="0.008"/>
                    <GradientStop Color="#FFE3F1B3" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Image x:ConnectionId='4' x:Name="image1" HorizontalAlignment="Left" Source="ms-appx:///Images/applogo.png" Height="130" Margin="10,0,0,0" VerticalAlignment="Top" Width="1186" Grid.Row="2" Grid.ColumnSpan="3"/>

    </Grid>
</Page>

