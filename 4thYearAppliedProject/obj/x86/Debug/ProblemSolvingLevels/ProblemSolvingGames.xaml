        <Image x:ConnectionId='1' x:Name="ManicMathImg" Source="ms-appx:///Images/article.jpg" Height="177"  Margin="104,28,0,435" HorizontalAlignment="Left" Width="165" />
        <Image x:ConnectionId='2' x:Name="QuickRPGImg" Source="ms-appx:///Images/Timer.jpg" Height="177"  Margin="119,463,0,0" HorizontalAlignment="Left" Width="165" />

        <Image x:ConnectionId='3' x:Name="HigherOrLowerImg" Source="ms-appx:///Images/higherOrLower.jpg" Height="177"  Margin="109,241,0,222" HorizontalAlignment="Left" Width="165" />
        <Button x:ConnectionId='4' x:Name="HigherOrLowerGameBtn" Content="Higher or Lower" HorizontalAlignment="Left" Height="177" Margin="113,253,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.424,0.554" Width="165"                                    VerticalContentAlignment="Bottom"/>
        <Button x:ConnectionId='5' x:Name="ManicMathsbtn" Content="Manic Maths" HorizontalAlignment="Left" Height="177" Margin="106,38,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.424,0.554"                             VerticalContentAlignment="Bottom" Width="165"/>
